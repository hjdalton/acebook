<!DOCTYPE html>
<html lang="en">
  <head>
    <nav class="navbar" style="text-align: center;">
    <a class="new-post" href="/posts/new">New Post</a>
      <a class="profile" href="#">Profile</a>
      <a class="logout" href="#">Log Out</a>
    </nav>
  </head>
  <body style="text-align: center;">
    <h1>Timeline</h1>  
      <ul class="posts" >
        {{#each posts}}
        <div id= "{{this.message}}">
          <p ><b> {{this.message}} </b></p>
          <p> Likes: {{this.likes}} </p>
          <div id ="forms">
            <form name="delete-post-form" id="delete-post-form" action="/posts/delete" method="post">
              <input id="id" type="hidden" name="id" value="{{this._id}}">
              <input type="submit" id= this._id value="Delete">
            </form>
        
            <form name="like-post-form" id="like-post-form" action="/posts/like" method="post">
              <input id="id" type="hidden" name="id" value="{{this._id}}">
              <input type="submit" id= this._id value="Like">
            </form> 
            
            <form name="comment-post-form" id="comment-post-form" action="/posts/comments" method="get">
              <input id="comment-button" type="submit" name="comment-button" value="Comment">
            </form>
        
          </div> 
        </div>
        {{/each}}
      </ul>
    
  </body>
</html>